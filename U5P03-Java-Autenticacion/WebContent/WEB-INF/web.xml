<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>U5P03-Java-Autenticacion</display-name>
  <welcome-file-list>
    <welcome-file>MostrarCatalogo</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>srv_db</param-name>
    <param-value>jdbc:mariadb://localhost:3306</param-value>
  </context-param>
  <context-param>
    <param-name>usr_db_r</param-name>
    <param-value>alumno</param-value>
  </context-param>
  <context-param>
    <param-name>usr_db_rw</param-name>
    <param-value>alumno_rw</param-value>
  </context-param>
  <context-param>
    <param-name>psw_db_r</param-name>
    <param-value>alumno</param-value>
  </context-param>
  <context-param>
    <param-name>psw_db_rw</param-name>
    <param-value>dwes</param-value>
  </context-param>
  <servlet>
    <servlet-name>MostrarCatalogo</servlet-name>
    <servlet-class>servlet.MostrarCatalogoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MostrarCatalogo</servlet-name>
    <url-pattern> </url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.cuenta.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CuentaServlet</servlet-name>
    <servlet-class>servlet.CuentaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CuentaServlet</servlet-name>
    <url-pattern>/Cuenta</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AltaServlet</servlet-name>
    <servlet-class>servlets.cuenta.AltaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AltaServlet</servlet-name>
    <url-pattern>/Alta</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BajaServlet</servlet-name>
    <servlet-class>servlets.cuenta.BajaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BajaServlet</servlet-name>
    <url-pattern>/Baja</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>